{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "import",
        "node",
        "promise",
        "standard"
    ],
    "rules": {
        // 在此处添加或覆盖规则
        "no-lone-blocks": "off",
        "indent": ["error", 4]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    }
}